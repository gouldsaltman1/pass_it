<div class="page-header">
  <h3>Loan #<%= @loan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Borrow</dt>
      <dd><%= @loan.borrow_id %></dd>

      <dt>Lender</dt>
      <dd><%= @loan.lender_id %></dd>

      <dt>Borrower lender equipment</dt>
      <dd><%= @loan.borrower_lender_equipment %></dd>

      <dt>Equipment</dt>
      <dd><%= @loan.equipment_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/loans" class="btn btn-primary">
        Back
      </a>
      <a href="/loans/<%= @loan.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_loan/<%= @loan.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
